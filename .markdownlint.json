{
  "default": true,
  "line-length": false,
  "no-trailing-spaces": true,
  "no-multiple-blanks": {
    "maximum": 1
  },
  "no-hard-tabs": true,
  "blanks-around-headings": {
    "lines_above": 1,
    "lines_below": 1
  },
  "blanks-around-lists": true,
  "list-marker-space": true,
  "ul-style": {
    "style": "dash"
  },
  "code-block-style": {
    "style": "fenced"
  },
  "fenced-code-language": true,
  "first-line-heading": false
}
